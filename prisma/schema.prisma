generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  dept      String
  year      Int
  phone     String
  role      Role
  urlCount  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  urls      Urls[]
}

model Urls {
  id           String   @id @default(cuid())
  originalUrl  String
  shortenedUrl String
  shortName    String   @unique
  createdAt    DateTime @default(now())
  userId       String
  user         Users    @relation(fields: [userId], references: [id])
}

enum Role {
  STUDENT
  FACULTY
}
